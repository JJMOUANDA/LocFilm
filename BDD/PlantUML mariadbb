entity "Film" {
  +id: int
  --
  name: varchar
  releaseDate: date
  description: text
  youtubeLink: varchar
  price : int
}

entity "Photo" {
  +id: int
  --
  filmId: int
  imageData: text
}

entity "User" {
  +id: int
  --
  username: varchar
  passwordHash: varchar
  email: varchar
  imageData : text
}

entity "Rent" {
  +id: int
  --
  userId: int
  filmId: int
  rentalDate: datetime
  returnDate: datetime
}

