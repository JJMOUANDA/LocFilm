  +id: int
  --
  userId: int
}

entity "CartItem" {
  +id: int
  --
  cartId: int
  filmId: int
  quantity: int
}

entity "Comment"{
  +id:int
  --
  userId : int
  filmId : int
  text : text
}

Film ||--o{ Rent : "is rented in"
Film ||--o{ Photo : "has many"
User ||--o{ Rent : "makes many"
User ||--o{ Cart : "has"
Cart ||--o{ CartItem : "contains"
Film ||--o{ CartItem : "included in"
Film ||--o{ Comment : "has many"
User ||--o{ Comment : "makes many"

